{{!
    @template block_rate/rate-form

    Example context (json):
    {
        "myrating": true,
        "courseid": 13,
        "cmid": 123
    }
}}
<div id="block_rate-stars" data-region="block_rate-rate">
    <div id="block_rate-stars-area" class="{{#myrating}}hidden{{/myrating}}">
        <span class="star" data-value="1">
            {{#pix}} star-blank, block_rate {{/pix}}
        </span>
        <span class="star" data-value="2">
            {{#pix}} star-blank, block_rate {{/pix}}
        </span>
        <span class="star" data-value="3">
            {{#pix}} star-blank, block_rate {{/pix}}
        </span>
        <span class="star" data-value="4">
            {{#pix}} star-blank, block_rate {{/pix}}
        </span>
        <span class="star" data-value="5">
            {{#pix}} star-blank, block_rate {{/pix}}
        </span>
    </div>

    <div id="block_rate-myrating-area" class="{{^myrating}}hidden{{/myrating}} mb-3 mt-3">
        <span>{{#str}} myrating, block_rate {{/str}}</span> :
        <span id="block_rate-myrating">{{{myrating}}}</span>
    </div>

    <a id="block_rate-rerate" class="{{^myrating}}hidden{{/myrating}}" href="javascript:void(0);">
        {{#str}} rerate, block_rate {{/str}}
    </a>
</div>
{{#js}}
    require(["block_rate/rate"], function(RateAction) {
        new RateAction("[data-region=block_rate-rate]", {{courseid}}, {{cmid}});
    });
{{/js}}
